<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <ClientWebPart Name="ClientWebPart2" Title="ACS Filter WebPart" Description="Shows content from CV database based on custom filter" DefaultWidth="270" DefaultHeight="500">

    <!-- Content element identifies the location of the page that will render inside the client web part
         Properties are referenced on the query string using the pattern _propertyName_
         Example: Src="~appWebUrl/Pages/ClientWebPart1.aspx?Property1=_property1_" -->
    <Content Type="html" Src="~appWebUrl/Pages/CvFilterWebPart.aspx?filter=_filter_&amp;num=_num_" />

    <!-- Define properties in the Properties element.
         Remember to put Property Name on the Src attribute of the Content element above. -->
    <Properties>
      <Property Name="filter" WebDisplayName="Filter" WebDescription="" Type="string"  WebBrowsable="true" RequiresDesignerPermission="false" DefaultValue='fq=location_exact:("Oslo")&amp;rows=50'></Property>
      <Property Name="num" WebDisplayName="Number of items displayed" WebDescription="" Type="int" WebBrowsable="true" RequiresDesignerPermission="false" DefaultValue="5"></Property>
    </Properties>

  </ClientWebPart>
</Elements>
